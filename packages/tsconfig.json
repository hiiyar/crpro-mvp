{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "lib": ["es6", "dom"],
    "baseUrl": "./packages",
    "paths": {
      "@crpro/types/*": ["./types/src/*"],
      "@crpro/*": ["./*/src"]
    }
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}
